<h2 class="tag is-link title is-5">Categories (<%= @categories.length %>)</h2>

<ol>
  <% @categories.each do |category| %>
  <li>
    <%= link_to category_products_path(category) do %>
      <%= category.title %>
      (<%= category.products.count %> products)
    <% end %>
  </li>
<% end %>
</ol>
