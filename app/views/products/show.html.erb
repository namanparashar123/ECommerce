<h1 class="title is-2">Products</h1>

<section class="section">
      <p>
        <%= link_to "Home", root_path, class:"title is-5" %> -
        <%= link_to "All Products", products_show_all_pros_path, class:"title is-5" %> -
        <%= link_to pluralize(current_cart.items_count, 'item'), cart_path, class:"title is-5" %>
      </p>

      <hr>

      <%= form_with(url: products_show_all_pros_path, method: "get", local: true) do %>
        <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "title", '179'), html: {selected: true} %>
        <%= label_tag(:query, "Search for:") %>
        <%= text_field_tag(:query) %>
        <%= submit_tag("Search") %>
      <% end %>
    </section>
<%= render partial: 'product',
            object: @product,
            locals: { name_is_link: false } %>